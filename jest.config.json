{
  "preset": "ts-jest",
  "rootDir": "./",
  "verbose": false,
  "collectCoverage": false,
  "testRegex": "Test.(t|j)s$",
  "clearMocks": true,
  "collectCoverageFrom": ["src/**/*.{js,ts}", "!**/node_modules/**"],
  "coverageReporters": ["cobertura", "text", "lcov"],
  "coverageDirectory": "./test-results/coverage",
  "reporters": ["default", "jest-junit", "jest-stare"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  }
}
