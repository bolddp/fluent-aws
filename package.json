{
  "name": "fluent-aws",
  "version": "0.17.0",
  "description": "Fluent AWS API, written in Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "node ./node_modules/rimraf/bin.js ./dist",
    "test": "jest --config=./jest.config.json",
    "coverage": "jest --config=./jest.config.json --coverage",
    "npm:publish": "npm run clean:build && npm publish",
    "clean:build": "npm run clean && node ./node_modules/typescript/bin/tsc --sourcemap false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolddp/fluent-aws.git"
  },
  "author": "Daniel Persson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bolddp/fluent-aws/issues"
  },
  "homepage": "https://github.com/bolddp/fluent-aws#readme",
  "devDependencies": {
    "@types/debug": "4.1.4",
    "@types/jest": "27.4.0",
    "@types/node": "12.0.10",
    "@types/node-fetch": "2.5.4",
    "jest": "27.4.7",
    "jest-junit": "13.0.0",
    "jest-stare": "2.3.0",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "amazon-cognito-identity-js": "3.2.1",
    "aws-sdk": "2.1062.0",
    "debug": "4.3.2",
    "node-fetch": "2.6.7"
  },
  "files": [
    "/dist",
    "README.md"
  ],
  "jestSonar": {
    "reportPath": "test-results",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "junit.xml"
  },
  "jest-stare": {
    "resultDir": "./test-results/jest-stare",
    "reportTitle": "Test results - Fleet device connection service",
    "coverageLink": "../coverage/lcov-report/index.html"
  }
}
