{
  "name": "fluent-aws",
  "version": "0.5.0",
  "description": "Fluent AWS API, written in Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "mocha --require ts-node/register test/**/*Test.ts",
    "coverage": "nyc --require ts-node/register --require source-map-support/register mocha test/**/*Test.ts",
    "npm:publish": "rm ./dist -rf && node ./node_modules/typescript/bin/tsc --sourcemap false && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolddp/fluent-aws.git"
  },
  "author": "Daniel Persson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bolddp/fluent-aws/issues"
  },
  "homepage": "https://github.com/bolddp/fluent-aws#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/debug": "^4.1.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.10",
    "@types/sinon": "^7.0.13",
    "chai": "^4.2.0",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "amazon-cognito-identity-js": "^3.2.1",
    "aws-sdk": "^2.484.0",
    "debug": "^4.1.1",
    "mocha": "^6.1.4",
    "node": "^12.5.0"
  },
  "files": [
    "/dist",
    "README.md"
  ],
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "dist/",
      "coverage/",
      "**/*.d.ts",
      "**/*Test.ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true
  }
}
